    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:srcCompat="@drawable/uw_logo"
            android:contentDescription="" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/Title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:text="Current Room" />

    </GridLayout>

    <GridLayout
        android:id="@+id/Contents1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cur_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/textview1"
            android:textColor="#FCD450"
            android:textSize="25sp"
            android:typeface="normal"
            tools:text="Rm #: QNC 2010" />

        <TextView
            android:id="@+id/cur_occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/textview"
            android:textColor="#FCD450"
            android:textSize="25sp"
            android:typeface="normal"
            tools:text="Occupancy: 25" />

    </GridLayout>

    <GridLayout
        android:id="@+id/Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:text="Alternate Room" />

    </GridLayout>

    <GridLayout
        android:id="@+id/Contents2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alt_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textColor="#FCD450"
            android:textSize="25sp"
            android:typeface="normal"
            tools:text="Rm #: MC 1878" />

        <TextView
            android:id="@+id/alt_occupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textColor="#FCD450"
            android:textSize="25sp"
            android:typeface="normal"
            tools:text="Occupancy: 2" />

    </GridLayout>

